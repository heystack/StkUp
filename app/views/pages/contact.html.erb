<h1>Contact</h1>

<%= form_tag "/contact_us_form" do -%>
<table>
<tr>
<td><label for="contact_name">Name:</label></td>
<td><%= text_field "contact", "name" %></td>
</tr>
<tr>
<td><label for="contact_email">Email:</label></td>
<td><%= text_field "contact", "email" %></td>
</tr>
<tr>
<td style="vertical-align:top"><label for="comment_body">Comment:</label></td>
<td><%= text_area "contact", "comment", :size => "8x30" %></td>
</tr>
</table>

<input type="submit" value="Submit" class="primary" />
<% end -%>