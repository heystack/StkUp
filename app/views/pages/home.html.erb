<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="question">Stack of the Day</h1>
        <%= render 'shared/answer_form' %>
        <% # render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
  <% if @grouped_answers %>
	<%= render 'shared/stkchart_pie' %>
  <% end %>

<% else %>
  <p>
	<% if @stack && @choices %>
	  <%= render 'answers/answer_form', :no_button => "t" %>
	<% end %>
  </p>

  <!-- <%= link_to "Stack Me Up!", signup_path, :class => "signup_button round" %> -->

  <div class="tagline">
    Simple Purposeful Comparisons
  </div>
<% end %>

