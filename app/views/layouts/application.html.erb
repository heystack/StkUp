<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
	<%= render 'layouts/chartincludes' %>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
	<!-- Including :defaults line as the first include breaks the :destroy action -->
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'custom-form-elements' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
