<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= interests_user_path(@user) %>">
          <span id="interests" class="stat">
            <%= pluralize(@user.interests.count, "interest") %>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>