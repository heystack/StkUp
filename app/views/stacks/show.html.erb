<table class="stacks" summary="Stacks">
  <tr><td span=2><%= link_to @interest.interest_desc, interest_path(@interest.id) %></td></tr>
  <tr>
    <td class="main">
	  <h1><%= @title %></h1>
    </td>
    <td class="add_choice">
      <%= link_to "Add Choice", new_stack_choice_path(@stack) %><br />
    </td>
  </tr>

<% if @choices.empty? %>
  <tr><td span=2>No Choices.</td></tr>
<% else %>
  <tr><td span=2>Choices</td></tr>
  <tr><td span=2><%= render @choices %></td></tr>
<% end %>

<% if @answers.empty? %>
  <tr><td span=2>No Answers.</td></tr>
<% else %>
  <tr><td span=2>Answers</td></tr>
  <%= render @answers, :with_question => nil %>
<% end %>

</table>

<% if @choices %>
<%= render 'answers/answer_form' %>
<% end %>

<% if @grouped_answers %>
<%= render 'shared/stkchart_pie' %>
<% end %>