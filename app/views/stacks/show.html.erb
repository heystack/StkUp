<table class="breadcrumbs" summary="Stacks">
  <tr><td span=2><%= link_to "Stacks", interests_path %> >
	 			 <%= link_to @interest.interest_desc, interest_path(@interest.id) %> >
				 <%= @title %>
  </td></tr>
</table>

<% if !@my_answers.empty? && @grouped_answers %>
<%= render 'shared/stkchart_pie' %>
<% end %>

<% if @my_answers.empty? %>
<%= render 'answers/answer_form' %>
<% end %>

<h3>Relevant Q&A articles</h3>
<span class="qa_links">
<a href="http://www.quora.com/Lean-Startups/Does-the-lean-startup-philosophy-lead-to-more-successful-startups?q=startup+success">Here is a link to Q&A article 1.</a><br/>
<a href="http://www.quora.com/Lean-Startups/Does-the-lean-startup-philosophy-lead-to-more-successful-startups?q=startup+success">Here is a link to Q&A article 2.</a><br/>
<a href="http://www.quora.com/Lean-Startups/Does-the-lean-startup-philosophy-lead-to-more-successful-startups?q=startup+success">Here is a link to Q&A article 3.</a><br/>
</span>

<span class="created_by"><em>Created by:</em> <%= gravatar_for @stack_creator, :size => 15 %> <%= link_to @stack_creator.name, @stack_creator %></span><br/><br/>

<% if current_user.admin? || @stack.created_by?(current_user) %>

<table class="choices" summary="Choices">
<% if @choices.empty? %>
  <tr>
	<td>No Choices.</td>
	<td class="add_choice"><%= link_to "Add Choice", new_stack_choice_path(@stack) %></td>
  </tr>
<% else %>
  <tr>
	<td span=2>Choices (<%= link_to "Add Choice", new_stack_choice_path(@stack) %>)</td>
  </tr>
  <tr><td span=2><%= render @choices %></td></tr>
<% end %>
</table>

<table class="answers" summary="Answers">
<% if @answers.empty? %>
  <tr><td span=2>No Answers.</td></tr>
<% else %>
  <tr><td span=2>Answers</td></tr>
  <%= render @answers, :with_question => nil %>
<% end %>
</table>

<h2>Send Stack</h2>
<% form_tag "/send_stack_form" do -%>
<%= hidden_field :stack_id, :value => @stack.id %>
<table>
<tr>
<td><label for="send_to_email">Send Stack To:</label></td>
<td><%= text_field "contact", "email" %></td>
</tr>
<tr>
<td style="vertical-align:top"><label for="comment_body">Comment:</label></td>
<td><%= text_area "contact", "comment", :size => "3x30" %></td>
</tr>
</table>

<input type="submit" value="Send Stack" class="primary" />
<% end -%>

<% end %>